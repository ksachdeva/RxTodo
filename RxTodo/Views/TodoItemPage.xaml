<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage x:Class="RxTodo.TodoItemPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
			 Title="{Binding Name}"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <StackLayout Margin="20" VerticalOptions="StartAndExpand">
        <Label Text="Name" />
        <Entry x:Name="name" Text="{Binding Name}" />
        <Label Text="Notes" />
        <Entry x:Name="notes" Text="{Binding Notes}" />
        <Label Text="Done" />
        <Switch x:Name="done" IsToggled="{Binding IsDone}" />
        <Button x:Name="save" Text="Save" />
        <Button Text="Delete" />
        <Button Text="Cancel" />
    </StackLayout>
</ContentPage>
